 
    public int maxArea(int[] height) {
        int maximumArea = 0;
        int left = 0; // sol çubuk
        int right = height.length-1; // sağ çubuk array uzunluğunun bir eksiği olur array 0 dan başladığı için
        int shorterLine = 0;  // kısa olan çubuk
        int distance = 0; // mesafe

        while(left < right){ // sağ çubuk daha büyük olduğu müddetçe devam etsin
            shorterLine = Math.min(height[left], height[right]);  // iki çubuk arasından en kısasını bulduk (sol ve sağ indekse baktık)
            distance = right- left; // mesafe bulduk
            maximumArea = Math.max(maximumArea, shorterLine * distance); // maximum alanı bulduk 
            if(height[left] < height[right]){ // sağ daki çubuk daha büyükse soldaki kısayı arttır
                left++;
            }
            else{ // biz kısa çubuksak bizi düşür
                right--;
            }
        }
        return maximumArea;
    }
